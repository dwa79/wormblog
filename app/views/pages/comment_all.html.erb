<% if logged_in? %>
  <% @articles.each do |article| %>
      <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <h2><%= article.title %></h2>
            <br>
            <%= render article.comments.order("created_at DESC") %>
      
          </div>
      </div>

  <% end %>
<% else %>
    <h1>Please log in</h1>
<% end %>
